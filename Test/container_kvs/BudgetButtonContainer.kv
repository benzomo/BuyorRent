#:kivy 1.10

GridLayout1:

    cols: 1
    padding: 10
    canvas:
        Color:
            rgba: (204/256, 229/256, 255/256, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    GridLayout:
        cols: 2
        GridLayout:
            size_hint: 1, 0.6
            rows: 2
            Button:
                text: "Income"
            Button:
                text: "Expenses"

    Button:
        text: "Button 2"
        font_size: 24
    Button:
        text: "Button 3"
        background_color: .7, .7, 1, 1
    Button:
        text: "Button 4"
        on_press: self.text = 'pressed'
        on_release: self.text = 'Button 4'
    ToggleButton:
        text: "A toggle button"
    ToggleButton:
        text: "a toggle button in a group"
        group: "money"

