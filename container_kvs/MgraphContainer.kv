#:kivy 1.10


Mgraph:
    id: GLay
    cols: 1
    popup1: popup1.__self__
    popup2: popup2.__self__
    padding: '4sp'
    canvas:
        Color:
            rgba: (0, 51/256, 102/256, .4)
        Rectangle:
            size: self.size
            pos: self.pos
    ScrollView:
        GridLayout:
            size_hint: (1.2, 0.9)
            cols: 1

            GridLayout:
                cols: 4
                size_hint_y: 0.2
                Label:
                    text: 'Buy House?'
                Label:
                    text: 'Buy Condo?'
                Label:
                    text: 'Buy TownHouse?'
                Label:
                    text: 'I Want to Rent'
            GridLayout:
                cols: 4
                size_hint: (0.6, 0.2)
                BoxLayout:
                    ToggleButton:
                        background_color: (1, 1, 1, 0.4)
                        group: 'tolive'
                        id: houseL
                        text: 'LIVE'
                    ToggleButton:
                        background_color: (1, 1, 1, 0.4)
                        group: 'toinv'
                        id: houseI
                        text: 'Invest'
                BoxLayout:
                    ToggleButton:
                        group: 'tolive'
                        background_color: (1, 1, 1, 0.4)
                        id: condoL
                        text: 'LIVE'
                    ToggleButton:
                        group: 'toinv'
                        background_color: (1, 1, 1, 0.4)
                        id: condoI
                        text: 'Invest'
                BoxLayout:
                    ToggleButton:
                        group: 'tolive'
                        background_color: (1, 1, 1, 0.4)
                        id: thL
                        text: 'LIVE'
                    ToggleButton:
                        group: 'toinv'
                        background_color: (1, 1, 1, 0.4)
                        id: thI
                        text: 'Invest'
                Widget:

            GraphBox:


    Button:
        text: 'ADD'
        size_hint: 1.0, 0.05
        on_press: GLay.popup2.open(), mygraph.create_graph()
        background_color: (0/256, 153/256, 153/256, 0.5)
    Button:
        size_hint: (1, 0.05)
        text: text1.text
        on_release: GLay.popup1.open()
        background_color: (0/256, 153/256, 153/256, 0.5)


    Popup:
        id: popup2
        on_parent: if self.parent == GLay: GLay.remove_widget(self)
        title: "An example popup"
        size_hint: (0.8, 0.9)
        content: popupcontent2

        BoxLayout:
            id: popupcontent2
            AnchorLayout:

                anchor_y: 'top'

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, 1

                    Button:
                        text: 'OK'
                        size_hint: 1, 0.2
                        on_press: popup2.dismiss()
                    Mgraph:
                        id: mygraph
                        cols: 1
                        size_hint: 1, 1


    Popup:
        id: popup1
        on_parent: if self.parent == GLay: GLay.remove_widget(self)
        title: "An example popup"
        size_hint: (0.4, 0.6)
        content: popupcontent

        BoxLayout:
            id: popupcontent
            AnchorLayout:
                anchor_y: 'top'
                BoxLayout:
                    size_hint: 1, 0.2
                    TextInput:
                        id: text1
                        size_hint: 1, 1
                        password: True
                        text: "Password (but you can't see it)"
                        multiline: False

                    Button:
                        text: 'OK'
                        size_hint: 1, 1
                        on_press: popup1.dismiss()





